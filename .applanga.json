{
    "app": {
        "base_language": "en",
        "push": {
            "source": [
                {
                    "language": "en",
                    "file_format": "chrome_i18n_json",
                    "path": ".react_json_sample/en",
                    "tag": "app:messages.json"
                }
            ]
        },
        "pull": {
            "target": [
                {
                    "exclude_languages": [
                        "en"
                    ],
                    "file_format": "chrome_i18n_json",
                    "path": ".react_json_sample/en/<language>.json",
                    "tag": "app:messages.json"
                }
            ]
        }
    }
}